<assembly>
  <!--id is used for classifier in attached artifact-->
  <id>coberturaReporting</id>
  <formats>
<!--     <format>tar.gz</format> -->
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
      <source>${basedir}/src/main/scripts/cobertura.xml</source>
      <outputDirectory>/</outputDirectory>
      <filtered>false</filtered>
    </file>
    <file>
      <source>${basedir}/src/main/scripts/cobertura.properties</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <outputDirectory>/antjars</outputDirectory>
      <scope>compile</scope>
      <includes>
        <include>net.sourceforge.cobertura:cobertura</include>
      </includes>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <useTransitiveFiltering>true</useTransitiveFiltering>
    </dependencySet>
   
    <dependencySet>
      <unpack>true</unpack>
      <outputDirectory>/sources/Service</outputDirectory>
      <scope>compile</scope>
      <includes>
        <include>com.techastute.blog:Service:jar:sources</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <unpack>true</unpack>
      <outputDirectory>/sources/Webapp</outputDirectory>
      <scope>compile</scope>
      <includes>
        <include>com.techastute.blog:Webapp:jar:sources</include>
      </includes>
    </dependencySet>
   
    <dependencySet>
      <unpack>false</unpack>
      <outputDirectory>/cobertura</outputDirectory>
      <scope>compile</scope>
      <includes>
        <include>com.techastute.blog:Service:ser:cobertura</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputDirectory>/cobertura</outputDirectory>
      <scope>compile</scope>
      <includes>
        <include>com.techastute.blog:Webapp:ser:cobertura</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>